<div class="uk-container">
  <div class="uk-clearfix">
    <div class="uk-float-left">
      <h1>"<%= @item.name %>" szerkesztése</h1>
    </div>
    <div class="uk-float-right uk-padding-small">
      <%= link_to 'Vissza', @item, class: 'uk-link-muted' %>
      <%= link_to 'Összes tétel', items_path, class: 'uk-margin-left uk-link-muted' %>
    </div>
  </div>

  <div class="uk-grid-small" uk-grid>
    <div class="uk-grid-small uk-width-2-3">
      <%= render 'form', item: @item, image_uploader: false %>
    </div>
    <div class="uk-width-1-3">
      <%= render 'picture_form' %>
    </div>
  </div>

</div>
