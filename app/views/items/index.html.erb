<p id="notice"><%= notice %></p>

<h1>
  <% if @group %>
    <%=@group%> eszkozei
  <% else %>
    Osszes eszkoz
  <% end %>
</h1>
<div id='filter-container'>
  Filter:
  <input type='text', id='filter-field'/>
  <button id='filter'>Filter</button>
</div>
<div id='csv-link-contrainer'>
  <%= link_to "Letoltes CSV-ben", csv_link %>
</div>
<div class='pagemode-container'>
  <a class='pagemode-toggle'>Checkmode</a>
  <a class='save-changes'>Save Changes</a>
  <div class='error-message'></div>
</div>
<div class='pagination-container'>
  <a class='page-link first-page-link'>&lt;&lt;</a>
  <a class='page-link prev-page-link'>&lt;</a>
  <span class='page-num'></span>
  <a class='page-link next-page-link'>&gt;</a>
  <a class='page-link last-page-link'>&gt;&gt;</a>
</div>
<div id='grid-container'></div>
<script>
<%if @filter%>
  window.itemFilter = "<%=@filter%>"
<% else %>
  window.itemFilter = null
<%end%>
<%if @group%>
window.group = "<%=@group%>"
<% else %>
  window.group = null
<%end%>
</script>
<% if current_user.can_write?('all') %>
  <%= link_to 'New Item', new_item_path, class: 'new-item-link' %>
<% end %>
