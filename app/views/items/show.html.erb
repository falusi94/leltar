<div class="uk-container">
  <div class="uk-clearfix">
    <div class="uk-float-left">
      <h1><%= @item.name %></h1>
    </div>
    <div class="uk-float-right uk-padding-small">
      <%= link_to 'Vissza', items_path, class: 'uk-button uk-button-default uk-button-small' %>
      <%= @item.edit_button %>
    </div>
  </div>

  <div class="uk-grid-collapse" uk-grid>
    <div class="uk-grid-small uk-child-width-1-2 uk-width-2-3" uk-grid>
      <div class="uk-width-1-3">Leírás:</div>
      <div class="uk-width-2-3"><%= @item.description %></div>

      <div class="uk-width-1-3">Kör:</div>
      <div class="uk-width-2-3"><%= @item.group.name %></div>

      <div class="uk-width-1-3">Beszerzés dátuma:</div>
      <div class="uk-width-2-3"><%= @item.purchase_date %></div>

      <div class="uk-width-1-3">Felvitel dátuma:</div>
      <div class="uk-width-2-3"><%= @item.entry_date %></div>

      <div class="uk-width-1-3">Utolsó ellenőrzés:</div>
      <div class="uk-width-2-3"><%= @item.last_check %></div>

      <div class="uk-width-1-3">Státusz:</div>
      <div class="uk-width-2-3"><%= @item.status %></div>

      <div class="uk-width-1-3">Leírás:</div>
      <div class="uk-width-2-3"><%= @item.description %></div>

      <div class="uk-width-1-3">Leltári szám:</div>
      <div class="uk-width-2-3"><%= @item.old_number %></div>
    </div>

    <div class="uk-grid-small uk-child-width-1-2 uk-width-1-3" uk-grid>

      <% @item.photos.each do |photo| %>
          <%= link_to photo.url do %>
            <%= image_tag photo.url(:medium) %>
          <% end %>
      <% end %>

    </div>
  </div>

  <h2>Verziók</h2>
  <ul class="uk-list uk-list-divider">
    <li>
      <%= link_to 'Jelenlegi', item_path(@item) %>
    </li>
    <% @item.versions.each do |version| %>
      <li>
        <%= version_link(@item.id, version) %>
      </li>
    <%end%>
  </ul>
</div>
