.uk-container
  %h1= t('navigation.login')
  .uk-align-center{:class => "uk-width-2-3@m"}
    = form_for :session, url: session_path, html: {id: 'session-form', class: 'uk-form-horizontal'} do |f|
      - if @redirect
        = f.hidden_field :redirect, value: @redirect
      .uk-margin
        = f.label :email, class: 'uk-form-label'
        .uk-form-controls
          = f.email_field :email, class: 'uk-input uk-form-small'
      .uk-margin
        = f.label :password, class: 'uk-form-label'
        .uk-form-controls
          = f.password_field :password, class: 'uk-input uk-form-small'
      .uk-width-1-1
        = f.submit t('form.actions.sign_in'), class: 'uk-button uk-button-primary uk-align-center'
