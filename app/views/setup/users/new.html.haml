.uk-container
  .uk-clearfix
    .uk-float-left
      %h1.uk-margin-small-top=t('form.title.setup', thing: User.model_name.human)
    - if User.any?
      .uk-float-right
        = link_to t('form.actions.skip'), new_setup_organization_path, class: 'uk-button uk-button-default uk-button-small'
  .uk-align-center{:class => "uk-width-2-3@m"}
    = form_for @user, url: setup_users_path, html: {class: 'uk-form-horizontal'} do |f|
      = render 'alert', errors: @user.errors
      .uk-margin
        = f.label :name, class: 'uk-form-label'
        .uk-form-controls
          = f.text_field :name, class: "uk-input uk-form-small"
      .uk-margin
        = f.label :email, class: 'uk-form-label'
        .uk-form-controls
          = f.email_field :email, class: 'uk-input uk-form-small'
      .uk-margin
        = f.label :password, class: 'uk-form-label'
        .uk-form-controls
          = f.password_field :password, class: 'uk-input uk-form-small'
      .uk-margin
        = f.label :password_confirmation, class: 'uk-form-label'
        .uk-form-controls
          = f.password_field :password_confirmation, class: 'uk-input uk-form-small'
      .uk-width-1-1
        = f.submit t('form.actions.continue'), class: 'uk-button uk-button-primary uk-align-center'
