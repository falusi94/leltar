.uk-container
  .uk-clearfix
    .uk-float-left
      %h1=t('form.title.edit', thing: SystemAttribute.model_name.human)
    .uk-float-right.uk-padding-small
      = link_to back_label, system_attributes_path, class: 'uk-button uk-button-default uk-button-small'
  .uk-align-center{:class => "uk-width-2-3@m"}
    = form_tag edit_system_attributes_path, html: {class: 'uk-form-horizontal'} do
      - @system_attributes.each do |attribute|
        .uk-margin
          = label_tag attribute.name, attribute.name.humanize, class: 'uk-form-label'
          .uk-form-controls
            = text_field_tag attribute.name, attribute.value, class: 'uk-input uk-form-small'
      = submit_tag t('form.actions.save'), class: 'uk-button uk-button-primary uk-align-center'
