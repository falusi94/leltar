<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <% if current_user.admin %>
      <%= f.text_field :name %>
    <% else %>
      <%= user.name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <% if current_user.admin %>
    <div class="field">
      <%= f.label :read_rights %>
      <%= f.text_field :read_rights %>
    </div>

    <div class="field">
      <%= f.label :write_rights %>
      <%= f.text_field :write_rights %>
    </div>

    <div class="field">
      <%= f.label :admin %>
      <%= f.check_box :admin %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <%end%>
<% end %>
