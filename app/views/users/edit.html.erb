<div class="uk-container">
  <div class="uk-clearfix">
    <div class="uk-float-left">
      <h1>Felhasználó szerkesztése</h1>
    </div>
    <div class="uk-float-right uk-padding-small">
      <% if current_user.admin %>
        <%= link_to back_label, users_path, class: 'uk-button uk-button-default uk-button-small' %>
      <% end %>
    </div>
  </div>

  <div class="uk-align-center uk-width-2-3@m">
    <%= render 'form', user: @user %>

    <% if current_user.admin %>
      <%= render 'user_access', user: @user %>
    <% end %>
  </div>

</div>
