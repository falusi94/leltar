<div class="uk-container">
  <div class="uk-clearfix">
    <div class="uk-float-left">
      <h1>Felhasználók</h1>
    </div>
    <div class="uk-float-right uk-padding-small">
      <%= link_to 'Új felhasználó', new_user_path, class: 'uk-button uk-button-primary uk-button-small' %>
    </div>
  </div>

  <div class="uk-clearfix">
    <div class="uk-float-right">
      <%= paginate @users %>
    </div>
  </div>

  <ul class="uk-list uk-list-divider">
    <% @users.each do |user| %>
      <li class="uk-clearfix uk-margin-remove-top">
        <div class="uk-float-left">
          <h3>
            <%= link_to user.name, user %>
          </h3>
        </div>
        <div class="uk-float-right">
          <%= link_to 'Szerkesztés', edit_user_path(user), class: 'uk-button uk-button-secondary' %>
          <%= link_to 'Törlés', user, method: :delete,
                      data: { confirm: 'Biztosan törölni szeretnéd?' },
                      class: 'uk-button uk-button-danger '%>
        </div>
      </li>
    <% end %>
  </ul>
</div>
