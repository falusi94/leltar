<div class="uk-container">
  <div class="uk-clearfix">
    <div class="uk-float-left">
      <h1><%= @user.name %></h1>
    </div>
    <div class="uk-float-right uk-padding-small">
      <%= link_to 'Vissza', users_path, class: 'uk-button uk-button-small uk-button-default' %>
      <%= link_to 'Szerkesztés', edit_user_path(@user), class: 'uk-button uk-button-small uk-button-secondary' %>
    </div>
  </div>

  <div class="uk-align-center uk-width-2-3">
    <div class="uk-grid-small" uk-grid>
      <div class="uk-width-1-3">Név:</div>
      <div class="uk-width-2-3"><%= @user.name %></div>

      <div class="uk-width-1-3">Email:</div>
      <div class="uk-width-2-3"><%= @user.email %></div>

      <div class="uk-width-1-3">Admin:</div>
      <div class="uk-width-2-3"><%= @user.admin %></div>

      <div class="uk-width-1-3">Összes kör olvasása:</div>
      <div class="uk-width-2-3"><%= @user.read_all_group %></div>

      <div class="uk-width-1-3">Összes kör írása:</div>
      <div class="uk-width-2-3"><%= @user.write_all_group %></div>
    </div>

    <h3>Felhasználó hozzáférései</h3>

    <ul class="uk-list uk-list-divider">
      <% @user.rights.order(:group_id).decorate.each do |right| %>
        <li class="uk-clearfix">
          <div class="uk-float-left">
            <%= link_to right.group.name, edit_group_path(right.group), class: 'uk-link-muted' %>
          </div>
          <div class="uk-float-right">
            <%= right.type_icon %>
          </div>
        </li>
      <% end %>
    </ul>

  </div>


</div>
