<div class="uk-container">
  <div class="uk-clearfix">
    <div class="uk-float-left">
      <h1><%= @user.name %></h1>
    </div>
    <div class="uk-float-right uk-padding-small">
      <%= link_to 'Vissza', users_path, class: 'uk-link-muted' %>
      <%= link_to 'Szerkesztés', edit_user_path(@user), class: 'uk-margin-left uk-link-muted' %>
    </div>
  </div>

  <div class="uk-grid-collapse" uk-grid>
    <div class="uk-grid-small uk-child-width-1-2 uk-width-2-3" uk-grid>
      <div class="uk-width-1-3">Név:</div>
      <div class="uk-width-2-3"><%= @user.name %></div>

      <div class="uk-width-1-3">Email:</div>
      <div class="uk-width-2-3"><%= @user.email %></div>

      <div class="uk-width-1-3">Admin:</div>
      <div class="uk-width-2-3"><%= @user.admin %></div>
    </div>

  </div>

</div>
