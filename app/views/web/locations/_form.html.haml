= form_for location, html: {class: 'uk-form-horizontal', multipart: true} do |f|
  = render 'alert', errors: location.errors
  .uk-margin
    = f.label :name, class: 'uk-form-label'
    .uk-form-controls
      = f.text_field :name, class: 'uk-input uk-form-small'
  .uk-width-1-1
    = f.submit class: 'uk-button uk-button-primary uk-align-center'
