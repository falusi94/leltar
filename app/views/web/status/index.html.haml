.uk-container
  .uk-clearfix
    .uk-float-left
      %h1= t('navigation.status')
  %h3=t('status.overall_progress')
  .uk-text-muted
    =t('status.checked_items', since: @status.session_start)
  %progress.uk-progress{:max => "#{@status.existing_item_count}", :value => "#{@status.finished_item_count}"}
  .uk-child-width-1-2{:class => "uk-width-2-3@m", "uk-grid" => ""}
    %div=t('status.no_items')
    %div= @status.all_item_count
    %div=t('status.no_available_items')
    %div= @status.existing_item_count
    .uk-width-1-1.uk-text-muted.uk-margin-remove-top=t('status.no_available_items_description')
    %div=t('status.no_checked_items')
    %div= @status.finished_item_count
