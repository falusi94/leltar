.uk-container
  .uk-clearfix
    .uk-float-left
      %h1= t('navigation.users')
    .uk-float-right.uk-padding-small
      = link_to new_label, new_user_path, class: 'uk-button uk-button-primary uk-button-small'
  .uk-clearfix
    .uk-float-right
      != pagy_uikit_nav @pagy
  %ul.uk-list.uk-list-divider
    - @users.each do |user|
      %li.uk-clearfix.uk-margin-remove-top
        .uk-float-left
          %h3
            = link_to user.name, user
        .uk-float-right
          = link_to edit_label, edit_user_path(user), class: 'uk-button uk-button-secondary'
          = link_to delete_label, user, method: :delete,
            data: { confirm: t('form.actions.are_you_sure') },
            class: 'uk-button uk-button-danger '
