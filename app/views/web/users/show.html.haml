.uk-container
  .uk-clearfix
    .uk-float-left
      %h1= @user.name
    .uk-float-right.uk-padding-small
      = link_to back_label, users_path, class: 'uk-button uk-button-small uk-button-default'
      = link_to edit_label, edit_user_path(@user), class: 'uk-button uk-button-small uk-button-secondary'
  .uk-align-center{:class => "uk-width-2-3@s"}
    .uk-grid-small{"uk-grid" => ""}
      .uk-text-bold{:class => "uk-width-1-3@s"}="#{User.human_attribute_name(:name)}:"
      %div{:class => "uk-width-2-3@s"}= @user.name
      .uk-text-bold{:class => "uk-width-1-3@s"}="#{User.human_attribute_name(:email)}:"
      %div{:class => "uk-width-2-3@s"}= @user.email
      .uk-text-bold{:class => "uk-width-1-3@s"}="#{User.human_attribute_name(:admin)}:"
      %div{:class => "uk-width-2-3@s"}= @user.admin
      .uk-text-bold{:class => "uk-width-1-3@s"}="#{User.human_attribute_name(:read_all_department)}:"
      %div{:class => "uk-width-2-3@s"}= @user.read_all_department
      .uk-text-bold{:class => "uk-width-1-3@s"}="#{User.human_attribute_name(:write_all_department)}:"
      %div{:class => "uk-width-2-3@s"}= @user.write_all_department
    %h3=User.human_attribute_name(:rights)
    %ul.uk-list.uk-list-divider
      - @user.rights.order(:department_id).each do |right|
        %li.uk-clearfix
          .uk-float-left
            = link_to right.department.name, edit_department_path(right.department), class: 'uk-link-muted'
          .uk-float-right
            = right.type_icon
